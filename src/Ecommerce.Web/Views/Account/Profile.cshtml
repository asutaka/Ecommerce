@model Ecommerce.Web.ViewModels.CustomerProfileViewModel

@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-transparent border-secondary mb-4">
                <div class="card-body">
                    <h5 class="card-title">Tài khoản</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#profile" class="text-decoration-none">
                                <i class="bi bi-person me-2"></i>Thông tin cá nhân
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#orders" class="text-decoration-none">
                                <i class="bi bi-bag me-2"></i>Đơn hàng của tôi
                            </a>
                        </li>
                        <li>
                            <form asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link text-danger p-0 text-decoration-none">
                                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <!-- Profile Information -->
            <div id="profile" class="card bg-transparent border-secondary mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Thông tin cá nhân</h4>
                    
                    <form asp-action="UpdateProfile" method="post">
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Email:</div>
                            <div class="col-sm-8">
                                @Model.Email
                                <small class="text-muted d-block">Email không thể thay đổi</small>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label fw-bold">Họ và tên:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="FullName" value="@Model.FullName" placeholder="Nhập họ và tên" />
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label fw-bold">Số điện thoại:</label>
                            <div class="col-sm-8">
                                <input type="tel" class="form-control" name="Phone" value="@Model.Phone" placeholder="Nhập số điện thoại" />
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Đăng nhập lần cuối:</div>
                            <div class="col-sm-8">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span>Chưa có</span>
                                }
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h5 class="mb-3">Địa chỉ giao hàng</h5>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt-fill text-primary me-2"></i>Địa chỉ 1 (Mặc định)
                            </label>
                            <textarea class="form-control" name="ShippingAddress1" rows="2" placeholder="Nhập địa chỉ giao hàng chính">@Model.ShippingAddress1</textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt text-secondary me-2"></i>Địa chỉ 2
                            </label>
                            <textarea class="form-control" name="ShippingAddress2" rows="2" placeholder="Nhập địa chỉ giao hàng phụ (tùy chọn)">@Model.ShippingAddress2</textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt text-secondary me-2"></i>Địa chỉ 3
                            </label>
                            <textarea class="form-control" name="ShippingAddress3" rows="2" placeholder="Nhập địa chỉ giao hàng phụ (tùy chọn)">@Model.ShippingAddress3</textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Order Statistics -->
            <div class="card bg-transparent border-secondary mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">Thống kê đơn hàng</h4>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h2 class="text-primary">@Model.TotalOrders</h2>
                            <p class="text-muted">Tổng đơn hàng</p>
                        </div>
                        <div class="col-md-4">
                            <h2 class="text-success">@Model.RecentOrders.Count(x => x.Status == "Completed")</h2>
                            <p class="text-muted">Hoàn thành</p>
                        </div>
                        <div class="col-md-4">
                            <h2 class="text-warning">@Model.RecentOrders.Count(x => x.Status != "Completed" && x.Status != "Cancelled")</h2>
                            <p class="text-muted">Đang xử lý</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Orders -->
            <div id="orders" class="card bg-transparent border-secondary">
                <div class="card-body">
                    <h4 class="card-title mb-4">Đơn hàng gần đây</h4>
                    
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><code>@order.Id.ToString().Substring(0, 8)</code></td>
                                            <td>@order.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@order.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case "Completed":
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                    case "Failed":
                                                        <span class="badge bg-danger">Thất bại</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-warning">Đang xử lý</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-bag-x display-1 text-muted"></i>
                            <p class="text-muted mt-3">Bạn chưa có đơn hàng nào</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
                                Mua sắm ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
