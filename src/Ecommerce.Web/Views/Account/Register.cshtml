@model Ecommerce.Web.ViewModels.CustomerRegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<section class="auth-shell">
    <div class="auth-card">
        <p class="pill">Create account</p>
        <h1>Đăng ký</h1>
        <p class="muted">Nhận ưu đãi và đồng bộ đơn hàng với tài khoản Moderno.</p>

        <form asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" autofocus />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
                <small class="muted">Mật khẩu tối thiểu 6 ký tự.</small>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
        </form>

        <div class="auth-swap">
            <span class="muted">Đã có tài khoản?</span>
            <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Đăng nhập ngay</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
