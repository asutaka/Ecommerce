@model Ecommerce.Web.ViewModels.CustomerLoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<section class="auth-shell">
    <div class="auth-card">
        <p class="pill">Welcome back</p>
        <h1>Đăng nhập</h1>
        <p class="muted">Mua sắm nhanh với tài khoản Moderno Boutique.</p>

        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" autofocus />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-check-inline">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>

        <div class="auth-swap">
            <span class="muted">Chưa có tài khoản?</span>
            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Đăng ký ngay</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
