<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Moderno Commerce</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
</head>
<body>
    <header class="moderno-nav">
        <div class="logo-stack">
            <span class="logo-dot"></span>
            <div>
                <div class="brand-title">Moderno</div>
                <div class="brand-subtitle">Boutique</div>
            </div>
        </div>
        <nav>
            <a href="/#new-in">Hàng mới về</a>
            <a href="/#categories">Danh mục</a>
            <a href="/#collections">Bộ sưu tập</a>
            <a href="/#catalog">Sản phẩm</a>
            <a asp-area="" asp-controller="Home" asp-action="About">Về Moderno</a>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
        </nav>
        <div class="nav-actions">
            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
            {
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle text-decoration-none" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        @(User.Identity.Name ?? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "Tài khoản")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Tài khoản của tôi</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-link text-decoration-none">
                    <i class="bi bi-person-circle me-1"></i>Đăng nhập
                </a>
            }
            @await Html.PartialAsync("_CartPartial")
        </div>
    </header>

    <main class="moderno-shell">
        @RenderBody()
    </main>

    <footer class="moderno-footer">
        <div>
            <div class="brand-title">Moderno</div>
            <small>Studio nội thất số · Hà Nội</small>
        </div>
        <div>© @DateTime.UtcNow.Year Moderno Commerce</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
