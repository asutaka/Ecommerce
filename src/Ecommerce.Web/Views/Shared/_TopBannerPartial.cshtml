@using Ecommerce.Infrastructure.Entities
@using Ecommerce.Infrastructure.Persistence
@using Microsoft.EntityFrameworkCore
@inject EcommerceDbContext DbContext

@{
    // Load active Top Bar banner (only show the first one)
    var topBanner = await DbContext.Banners
        .Where(b => b.BannerType == BannerType.TopBar 
                 && b.IsActive 
                 && (b.StartDate == null || b.StartDate <= DateTime.UtcNow)
                 && (b.EndDate == null || b.EndDate >= DateTime.UtcNow))
        .OrderBy(b => b.DisplayOrder)
        .FirstOrDefaultAsync();
}

@if (topBanner != null)
{
    <div class="top-banner-bar bg-primary text-white py-2" id="topBanner" style="position: sticky; top: 0; z-index: 1050;" data-banner-id="@topBanner.Id">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    @if (!string.IsNullOrEmpty(topBanner.LinkUrl))
                    {
                        <a href="@topBanner.LinkUrl" target="@(topBanner.OpenInNewTab ? "_blank" : "_self")" class="text-white text-decoration-none" onclick="trackBannerClick('@topBanner.Id')">
                            @if (!string.IsNullOrEmpty(topBanner.Title))
                            {
                                <strong>@topBanner.Title</strong>
                            }
                            @if (!string.IsNullOrEmpty(topBanner.Description))
                            {
                                <span class="ml-2">@topBanner.Description</span>
                            }
                            <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(topBanner.Title))
                        {
                            <strong>@topBanner.Title</strong>
                        }
                        @if (!string.IsNullOrEmpty(topBanner.Description))
                        {
                            <span class="ml-2">@topBanner.Description</span>
                        }
                    }
                    
                    <button type="button" class="close ml-3 text-white" aria-label="Close" onclick="closeTopBanner()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function closeTopBanner() {
            document.getElementById('topBanner').style.display = 'none';
            // Save to localStorage to remember user's choice
            localStorage.setItem('topBannerClosed_@topBanner.Id', 'true');
        }

        // Check if user has previously closed this banner
        if (localStorage.getItem('topBannerClosed_@topBanner.Id') === 'true') {
            document.getElementById('topBanner').style.display = 'none';
        }
    </script>
}
