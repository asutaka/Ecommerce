@model Ecommerce.Web.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = Model.Name;
}

<section class="product-detail">
    <nav aria-label="breadcrumb" class="breadcrumb-bar">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index" asp-route-id="@Model.CategoryId">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="detail-grid">
        <div class="gallery-card">
            @if (Model.Images.Any())
            {
                <div class="main-image">
                    <img src="@Model.Images.First()" alt="@Model.Name" id="mainImage" />
                </div>
                @if (Model.Images.Count > 1)
                {
                    <div class="thumbnail-row">
                        @foreach (var image in Model.Images)
                        {
                            <button type="button" class="thumb"
                                    onclick="document.getElementById('mainImage').src='@image'">
                                <img src="@image" alt="@Model.Name" />
                            </button>
                        }
                    </div>
                }
            }
            else
            {
                <div class="main-image">
                    <img src="https://placehold.co/600x400?text=No+Image" alt="@Model.Name" />
                </div>
            }
        </div>

        <div class="product-info-card">
            <div class="info-header">
                <p class="pill">Moderno</p>
                @if (Model.IsFeatured)
                {
                    <span class="badge-pill accent">Best Seller</span>
                }
            </div>
            <h1>@Model.Name</h1>
            <div class="meta-row">
                <span class="muted">Danh mục: <a asp-controller="Category" asp-action="Index" asp-route-id="@Model.CategoryId">@Model.CategoryName</a></span>
            </div>
            <div class="price-tag">@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>

            <div class="product-description">
                <h5>Mô tả</h5>
                <p class="muted">@Model.Description</p>
            </div>

            <div class="add-to-cart-section">
                <div class="qty-inline">
                    <label for="quantity">Số lượng</label>
                    <input type="number" id="quantity" value="1" min="1" max="10" />
                </div>
                <button class="btn btn-primary w-100" onclick="addToCart('@Model.Id', document.getElementById('quantity').value)">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                </button>
            </div>
        </div>
    </div>

    @if (Model.RelatedProducts.Any())
    {
        <section class="section related-products">
            <div class="section-header">
                <div>
                    <p class="pill">Gợi ý</p>
                    <h3>Sản phẩm liên quan</h3>
                </div>
            </div>
            <div class="catalog-grid">
                @foreach (var product in Model.RelatedProducts)
                {
                    <article class="product-card">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="product-link">
                            <img src="@product.HeroImageUrl" alt="@product.Name" loading="lazy" />
                            <div class="card-body">
                                <p class="eyebrow">Sản phẩm</p>
                                <h3>@product.Name</h3>
                                <p>@product.Description</p>
                                <div class="card-footer">
                                    <span>@product.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                </div>
                            </div>
                        </a>
                    </article>
                }
            </div>
        </section>
    }
</section>
