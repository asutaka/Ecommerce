@model Ecommerce.Web.ViewModels.AboutViewModel

@{
    ViewData["Title"] = Model.Title;
}

<section class="about-hero-card">
    <div class="about-grid">
        <div>
            <p class="pill">Câu chuyện của chúng tôi</p>
            <h1>@Model.Title</h1>
            <p class="muted">@Model.Description</p>
        </div>
        <div class="about-visual">
            <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=900&auto=format&fit=crop&q=80" alt="About Moderno" />
        </div>
    </div>
</section>

<section class="statistics-section">
    <div class="stat-card">
        <h3>@Model.Statistics.YearsInOperation+</h3>
        <p class="muted">Năm hoạt động</p>
    </div>
    <div class="stat-card">
        <h3>@Model.Statistics.CustomerRating</h3>
        <p class="muted">Đánh giá khách hàng</p>
    </div>
    <div class="stat-card">
        <h3>@Model.Statistics.CustomerSatisfaction%</h3>
        <p class="muted">Hài lòng khách hàng</p>
    </div>
</section>

<section class="section">
    <div class="section-header">
        <div>
            <p class="pill">Vì sao chọn Moderno</p>
            <h3>Chất lượng, phong cách, giá hợp lý</h3>
            <p class="muted">Premium fabrics, drop mới mỗi tuần, size đa dạng XS-4XL.</p>
        </div>
    </div>
    <div class="about-feature-grid">
        @foreach (var feature in Model.Features)
        {
            <article class="feature-card">
                <div class="feature-icon">
                    <i class="@feature.Icon"></i>
                </div>
                <h4>@feature.Title</h4>
                <p class="muted">@feature.Description</p>
            </article>
        }
    </div>
</section>

<section class="mission-card">
    <div>
        <p class="pill pill-dark">Sứ mệnh</p>
        <h2>Phong cách dễ tiếp cận cho mọi người</h2>
        <p class="muted">
            Từ việc chọn nguyên liệu đến làm việc với nhà thiết kế tài năng, mỗi bước đều chú ý chi tiết để mang lại sản phẩm chất lượng cao, giá hợp lý.
        </p>
        <div class="hero-cta">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Khám phá sản phẩm</a>
            <a asp-controller="Category" asp-action="Index" asp-route-id="@Guid.Empty" class="btn btn-ghost">Xem danh mục</a>
        </div>
    </div>
</section>
