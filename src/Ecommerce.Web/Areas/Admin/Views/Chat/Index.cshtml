        }
        
        .chat-message {
            margin-bottom: 15px;
            display: flex;
        }
        
        .chat-message.customer {
            justify-content: flex-start;
        }
        
        .chat-message.admin, .chat-message.ai {
            justify-content: flex-end;
        }
        
        .message-bubble {
            max-width: 70%;
            padding: 10px 15px;
            border-radius: 12px;
            word-wrap: break-word;
        }
        
        .chat-message.customer .message-bubble {
            background: white;
            border: 1px solid #dee2e6;
            color: #333;
        }
        
        .chat-message.admin .message-bubble {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .chat-message.ai .message-bubble {
            background: #28a745;
            color: white;
        }
        
        .message-time {
            font-size: 11px;
            opacity: 0.7;
            margin-top: 5px;
        }
        
        .unread-badge {
            background: #dc3545;
            color: white;
            border-radius: 10px;
            padding: 2px 8px;
            font-size: 11px;
            font-weight: bold;
        }
    </style>
}
