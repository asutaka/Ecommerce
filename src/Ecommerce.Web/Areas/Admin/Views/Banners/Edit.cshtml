@model Ecommerce.Web.Areas.Admin.ViewModels.BannerViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Banner";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-edit text-primary"></i> Chỉnh sửa Banner
                </h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">
            <input asp-for="ImageUrl" type="hidden">
            <input asp-for="MobileImageUrl" type="hidden">
            
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin Banner</h3>
                        </div>
                        
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="form-group">
                                <label asp-for="Title" class="required"></label>
                                <input asp-for="Title" class="form-control" placeholder="Ví dụ: Banner khuyến mãi mùa hè">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Mô tả ngắn về banner"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BannerType" class="required"></label>
                                        <select asp-for="BannerType" asp-items="Model.BannerTypes" class="form-control" id="bannerTypeSelect">
                                        </select>
                                        <span asp-validation-for="BannerType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Position" class="required"></label>
                                        <select asp-for="Position" asp-items="Model.Positions" class="form-control">
                                        </select>
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" id="categorySelect">
                                <label asp-for="CategoryId"></label>
                                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                                <small class="form-text text-muted">Chỉ áp dụng cho Banner loại Category</small>
                            </div>

                            <h6 class="border-bottom pb-2 mt-4 mb-3">
                                <i class="fas fa-images"></i> Hình ảnh
                            </h6>

                            <div class="form-group">
                                <label asp-for="ImageFile">Ảnh Desktop</label>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="mb-2">
                                        <p class="text-sm text-muted mb-1">Ảnh hiện tại:</p>
                                        <img src="@Model.ImageUrl" alt="Current" class="img-thumbnail" style="max-width: 100%; max-height: 200px;">
                                    </div>
                                }
                                <div class="custom-file">
                                    <input asp-for="ImageFile" type="file" class="custom-file-input" id="desktopImageInput" accept="image/*">
                                    <label class="custom-file-label" for="desktopImageInput">Chọn ảnh mới để thay thế...</label>
                                </div>
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Để trống nếu không muốn thay đổi
                                </small>
                                <div id="desktopPreview" class="mt-2" style="display: none;">
                                    <p class="text-sm text-success mb-1">Ảnh mới:</p>
                                    <img id="desktopPreviewImg" src="#" alt="Preview" class="img-thumbnail" style="max-width: 100%; max-height: 300px;">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="MobileImageFile">Ảnh Mobile (Tùy chọn)</label>
                                @if (!string.IsNullOrEmpty(Model.MobileImageUrl))
                                {
                                    <div class="mb-2">
                                        <p class="text-sm text-muted mb-1">Ảnh hiện tại:</p>
                                        <img src="@Model.MobileImageUrl" alt="Current Mobile" class="img-thumbnail" style="max-width: 400px; max-height: 200px;">
                                    </div>
                                }
                                else
                                {
                                    <p class="text-sm text-muted">Chưa có ảnh mobile (đang dùng ảnh desktop)</p>
                                }
                                <div class="custom-file">
                                    <input asp-for="MobileImageFile" type="file" class="custom-file-input" id="mobileImageInput" accept="image/*">
                                    <label class="custom-file-label" for="mobileImageInput">Chọn ảnh mới để thay thế...</label>
                                </div>
                                <span asp-validation-for="MobileImageFile" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Để trống nếu không muốn thay đổi
                                </small>
                                <div id="mobilePreview" class="mt-2" style="display: none;">
                                    <p class="text-sm text-success mb-1">Ảnh mới:</p>
                                    <img id="mobilePreviewImg" src="#" alt="Preview" class="img-thumbnail" style="max-width: 400px; max-height: 300px;">
                                </div>
                            </div>

                            <h6 class="border-bottom pb-2 mt-4 mb-3">
                                <i class="fas fa-link"></i> Link & Cài đặt
                            </h6>

                            <div class="form-group">
                                <label asp-for="LinkUrl"></label>
                                <input asp-for="LinkUrl" class="form-control" placeholder="https://example.com">
                                <span asp-validation-for="LinkUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="OpenInNewTab" type="checkbox" class="custom-control-input" id="openInNewTabCheck">
                                    <label class="custom-control-label" for="openInNewTabCheck">
                                        Mở link trong tab mới
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ExternalAdCode"></label>
                                <textarea asp-for="ExternalAdCode" class="form-control" rows="6" placeholder="Paste mã Google AdSense hoặc HTML/JavaScript quảng cáo..."></textarea>
                                <span asp-validation-for="ExternalAdCode" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> <strong>Tùy chọn:</strong> Nếu có mã quảng cáo, hệ thống sẽ ưu tiên hiển thị mã này thay vì ảnh banner. 
                                    Hỗ trợ Google AdSense, HTML, iframe.
                                </small>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StartDate"></label>
                                        <input asp-for="StartDate" type="datetime-local" class="form-control">
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                        <small class="form-text text-muted">Để trống để hiển thị ngay</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="EndDate"></label>
                                        <input asp-for="EndDate" type="datetime-local" class="form-control">
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                        <small class="form-text text-muted">Để trống để hiển thị mãi</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DisplayOrder"></label>
                                        <input asp-for="DisplayOrder" type="number" class="form-control">
                                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                        <small class="form-text text-muted">Số nhỏ hiển thị trước</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br>
                                        <div class="custom-control custom-checkbox">
                                            <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveCheck">
                                            <label class="custom-control-label" for="isActiveCheck">
                                                <strong>Kích hoạt</strong>
                                                <small class="d-block text-muted">Banner sẽ hiển thị trên website</small>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.CreatedAt.HasValue)
                            {
                                <div class="alert alert-info mt-3">
                                    <small>
                                        <i class="fas fa-info-circle"></i>
                                        <strong>Ngày tạo:</strong> @Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        @if (Model.UpdatedAt.HasValue)
                                        {
                                            <span class="ml-3">
                                                <strong>Cập nhật:</strong> @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                        }
                                    </small>
                                </div>
                            }
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật Banner
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#deleteModal">
                                <i class="fas fa-trash"></i> Xóa Banner
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Hướng dẫn</h3>
                        </div>
                        <div class="card-body">
                            <h6><i class="fas fa-info-circle"></i> Cập nhật Banner</h6>
                            <p class="text-sm">
                                Chỉ upload ảnh mới nếu bạn muốn thay đổi. Để trống sẽ giữ nguyên ảnh cũ.
                            </p>
                            
                            <h6><i class="fas fa-lightbulb"></i> Lưu ý</h6>
                            <ul class="text-sm pl-3">
                                <li>Kiểm tra lại thông tin trước khi lưu</li>
                                <li>Kích hoạt/vô hiệu để kiểm soát hiển thị</li>
                                <li>Sử dụng DisplayOrder để sắp xếp</li>
                            </ul>

                            <h6><i class="fas fa-calendar"></i> Lịch hiển thị</h6>
                            <p class="text-sm">
                                Banner chỉ hiển thị trong khoảng thời gian đã đặt (nếu có).
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa banner "<strong>@Model.Title</strong>"?</p>
                <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Handle file input label update
            $('input[type="file"]').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            // Desktop image preview
            $('#desktopImageInput').on('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#desktopPreviewImg').attr('src', e.target.result);
                        $('#desktopPreview').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Mobile image preview
            $('#mobileImageInput').on('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#mobilePreviewImg').attr('src', e.target.result);
                        $('#mobilePreview').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Toggle category select based on banner type
            function toggleCategorySelect() {
                var bannerType = $('#bannerTypeSelect').val();
                if (bannerType == '4') { // Category banner
                    $('#categorySelect').show();
                } else {
                    $('#categorySelect').hide();
                }
            }

            $('#bannerTypeSelect').on('change', toggleCategorySelect);
            toggleCategorySelect(); // Initial state
        });
    </script>
}
