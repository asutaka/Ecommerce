@using Ecommerce.Infrastructure.Entities
@model Ecommerce.Web.Areas.Admin.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 mb-0">Đơn hàng <code class="text-info fs-4">@Model.Id</code></h1>
                @switch (Model.Status)
                {
                    case OrderStatus.PendingInvoice:
                        <span class="badge bg-secondary">Chờ hóa đơn</span>
                        break;
                    case OrderStatus.Invoiced:
                        <span class="badge bg-info text-dark">Đã xuất HĐ</span>
                        break;
                    case OrderStatus.PaymentProcessing:
                        <span class="badge bg-warning text-dark">Đang xử lý TT</span>
                        break;
                    case OrderStatus.Paid:
                        <span class="badge bg-success">Đã thanh toán</span>
                        break;
                    case OrderStatus.Notified:
                        <span class="badge bg-primary">Đã thông báo</span>
                        break;
                    case OrderStatus.Completed:
                        <span class="badge bg-success">Hoàn thành</span>
                        break;
                    case OrderStatus.Failed:
                        <span class="badge bg-danger">Thất bại</span>
                        break;
                }
            </div>
            <p class="text-muted mt-1">Ngày đặt: @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-light rounded-pill">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Order Items -->
            <div class="card bg-transparent border-secondary mb-4">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-cart3 me-2"></i>Sản phẩm</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-center">SL</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-end">@item.UnitPrice.ToString("N0") ₫</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.LineTotal.ToString("N0") ₫</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td colspan="3" class="text-end">Tổng cộng:</td>
                                    <td class="text-end text-success fs-5">@Model.Total.ToString("N0") ₫</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Saga Timeline / Status -->
            <div class="card bg-transparent border-secondary">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-activity me-2"></i>Tiến trình xử lý (Saga)</h5>
                </div>
                <div class="card-body">
                    <div class="position-relative m-4">
                        <div class="progress" style="height: 2px;">
                            @{
                                var progress = 0;
                                if (Model.Status >= OrderStatus.Invoiced) progress = 33;
                                if (Model.Status >= OrderStatus.Paid) progress = 66;
                                if (Model.Status >= OrderStatus.Completed) progress = 100;
                            }
                            <div class="progress-bar bg-success" role="progressbar" style="width: @progress%;" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</div>
                        <div class="position-absolute top-0 start-33 translate-middle btn btn-sm @(Model.Status >= OrderStatus.Invoiced ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 33%;">2</div>
                        <div class="position-absolute top-0 start-66 translate-middle btn btn-sm @(Model.Status >= OrderStatus.Paid ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 66%;">3</div>
                        <div class="position-absolute top-0 start-100 translate-middle btn btn-sm @(Model.Status >= OrderStatus.Completed ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem; left: 100%;">4</div>
                        
                        <div class="d-flex justify-content-between mt-3 text-muted small">
                            <span>Khởi tạo</span>
                            <span>Hóa đơn</span>
                            <span>Thanh toán</span>
                            <span>Hoàn tất</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Customer Info -->
            <div class="card bg-transparent border-secondary mb-4">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>Khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Họ tên</label>
                        <div class="fw-bold">@Model.CustomerName</div>
                    </div>
                    <div>
                        <label class="text-muted small">Email</label>
                        <div><a href="mailto:@Model.CustomerEmail" class="text-info text-decoration-none">@Model.CustomerEmail</a></div>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            <div class="card bg-transparent border-secondary mb-4">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Thanh toán</h5>
                </div>
                <div class="card-body">
                    @if (Model.Payment != null)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">Số tiền</label>
                            <div class="fw-bold text-success">@Model.Payment.Amount.ToString("N0") ₫</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Mã tham chiếu</label>
                            <div class="font-monospace">@Model.Payment.Reference</div>
                        </div>
                        <div>
                            <label class="text-muted small">Thời gian xử lý</label>
                            <div>@Model.Payment.ProcessedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</div>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic">Chưa có thông tin thanh toán</div>
                    }
                </div>
            </div>

            <!-- Notification Log -->
            <div class="card bg-transparent border-secondary">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Thông báo</h5>
                </div>
                <div class="card-body">
                    @if (Model.Notification != null)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">Kênh</label>
                            <div><span class="badge bg-light text-dark">@Model.Notification.Channel</span></div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Gửi đến</label>
                            <div>@Model.Notification.Destination</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Thời gian gửi</label>
                            <div>@Model.Notification.SentAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</div>
                        </div>
                        <div>
                            <label class="text-muted small">Nội dung</label>
                            <div class="p-2 bg-dark rounded border border-secondary small">@Model.Notification.Message</div>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic">Chưa có log thông báo</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
