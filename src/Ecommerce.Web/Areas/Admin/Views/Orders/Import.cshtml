@{
    ViewData["Title"] = "Import Đơn hàng";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Import Đơn hàng từ Excel</h1>
        <a asp-action="Index" class="btn btn-outline-light rounded-pill">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-transparent border-secondary">
                <div class="card-body">
                    <div class="alert alert-info border-info bg-transparent text-info mb-4">
                        <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Lưu ý định dạng file</h5>
                        <p class="mb-0">File Excel (.xlsx) cần có các cột theo thứ tự:</p>
                        <ol class="mb-0 mt-2">
                            <li>Tên khách hàng (Bắt buộc)</li>
                            <li>Email khách hàng (Bắt buộc)</li>
                            <li>Sản phẩm (Định dạng: <code>Tên SP:SL; Tên SP 2:SL</code>)</li>
                        </ol>
                        <p class="mb-0 mt-2 small text-muted">Ví dụ cột Sản phẩm: <code>iPhone 15:1; Ốp lưng:2</code></p>
                    </div>

                    <form asp-action="Import" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="file" class="form-label text-muted">Chọn file Excel</label>
                            <input type="file" name="file" id="file" class="form-control bg-dark text-light border-secondary" accept=".xlsx" required>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["File"]?.Errors.Count > 0)
                            {
                                <div class="text-danger small mt-1">@ViewData.ModelState["File"]?.Errors[0].ErrorMessage</div>
                            }
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-cloud-upload me-2"></i>Tiến hành Import
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
