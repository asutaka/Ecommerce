@using Ecommerce.Infrastructure.Entities
@model Ecommerce.Web.Areas.Admin.ViewModels.OrderListViewModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Quản lý đơn hàng</h1>
        <div>
            <a asp-action="Export" asp-route-status="@Model.CurrentStatus" asp-route-keyword="@Model.Keyword" asp-route-fromDate="@Model.FromDate" asp-route-toDate="@Model.ToDate" class="btn btn-outline-info rounded-pill me-2">
                <i class="bi bi-download me-2"></i>Export Excel
            </a>
            <a asp-action="Import" class="btn btn-outline-success rounded-pill">
                <i class="bi bi-file-earmark-spreadsheet me-2"></i>Import Excel
            </a>
        </div>
    </div>

    <div class="card bg-transparent border-secondary mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label text-muted small">Từ khóa</label>
                    <input type="text" name="keyword" class="form-control bg-dark text-light border-secondary" placeholder="Tên, Email..." value="@Model.Keyword">
                </div>
                <div class="col-md-2">
                    <label class="form-label text-muted small">Trạng thái</label>
                    <select name="status" class="form-select bg-dark text-light border-secondary" asp-items="Html.GetEnumSelectList<Ecommerce.Infrastructure.Entities.OrderStatus>()">
                        <option value="">Tất cả</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label text-muted small">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control bg-dark text-light border-secondary" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2">
                    <label class="form-label text-muted small">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control bg-dark text-light border-secondary" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search me-2"></i>Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="admin-table card bg-transparent border-secondary">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td><code class="text-info">@item.Id</code></td>
                            <td>
                                <div class="fw-bold">@item.CustomerName</div>
                                <div class="small text-muted">@item.CustomerEmail</div>
                            </td>
                            <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Total.ToString("N0") ₫</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case OrderStatus.PendingInvoice:
                                        <span class="badge bg-secondary">Chờ hóa đơn</span>
                                        break;
                                    case OrderStatus.Invoiced:
                                        <span class="badge bg-info text-dark">Đã xuất HĐ</span>
                                        break;
                                    case OrderStatus.PaymentProcessing:
                                        <span class="badge bg-warning text-dark">Đang xử lý TT</span>
                                        break;
                                    case OrderStatus.Paid:
                                        <span class="badge bg-success">Đã thanh toán</span>
                                        break;
                                    case OrderStatus.Notified:
                                        <span class="badge bg-primary">Đã thông báo</span>
                                        break;
                                    case OrderStatus.Completed:
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case OrderStatus.Failed:
                                        <span class="badge bg-danger">Thất bại</span>
                                        break;
                                    default:
                                        <span class="badge bg-light text-dark">@item.Status</span>
                                        break;
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">
                                    <i class="bi bi-eye me-1"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.Orders.TotalPages > 1)
    {
        <div class="card-footer border-top border-secondary bg-transparent">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Trang @Model.Orders.PageIndex / @Model.Orders.TotalPages
                </div>
                <div>
                    @{
                        var prevDisabled = !Model.Orders.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.Orders.HasNextPage ? "disabled" : "";
                    }
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.Orders.PageIndex - 1)"
                       asp-route-status="@Model.CurrentStatus"
                       class="btn btn-sm btn-outline-light @prevDisabled">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.Orders.PageIndex + 1)"
                       asp-route-status="@Model.CurrentStatus"
                       class="btn btn-sm btn-outline-light @nextDisabled ms-1">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
