<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Moderno Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css">
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/admin/admin.css" asp-append-version="true">
    <style>
        /* Custom Sidebar Styling - White background with full opacity menu items */
        .main-sidebar {
            background-color: #ffffff !important;
        }
        
        /* Ensure all menu items are fully visible (not dimmed) */
        .nav-sidebar .nav-item .nav-link {
            color: #495057 !important;
            opacity: 1 !important;
        }
        
        /* Active menu item */
        .nav-sidebar .nav-item .nav-link.active {
            background-color: #007bff !important;
            color: #ffffff !important;
        }
        
        /* Hover effect */
        .nav-sidebar .nav-item .nav-link:hover {
            background-color: #e9ecef !important;
            color: #007bff !important;
        }
        
        /* Icons in menu */
        .nav-sidebar .nav-icon {
            opacity: 1 !important;
        }
        
        /* Section headers */
        .nav-header {
            color: #6c757d !important;
            opacity: 1 !important;
            font-weight: 600;
        }
        
        /* Brand link */
        .brand-link {
            background-color: #ffffff !important;
            border-bottom: 1px solid #dee2e6;
        }
        
        .brand-text {
            color: #495057 !important;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">Trang chủ</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" target="_blank">
                        <i class="fas fa-external-link-alt"></i> Xem Storefront
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- User Dropdown -->
                <li class="nav-item dropdown">
                    @{
                        // Check if user is authenticated as Admin (has Admin role)
                        var isAdmin = User.IsInRole("Admin");
                        var adminName = isAdmin
                            ? (User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
                               ?? User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
                               ?? "Admin")
                            : "Admin";
                    }
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                        <span class="d-none d-md-inline ml-1">@adminName</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a asp-area="Admin" asp-controller="Account" asp-action="Profile" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> Hồ sơ
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                        </a>
                    </div>
                </li>
                <!-- Fullscreen -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary elevation-4" style="background-color: #ffffff;">
            <!-- Brand Logo -->
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="brand-link">
                <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="Moderno Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Moderno Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <!-- Products -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">
                                <i class="nav-icon fas fa-box"></i>
                                <p>Sản phẩm</p>
                            </a>
                        </li>

                        <!-- Categories -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Danh mục</p>
                            </a>
                        </li>

                        <!-- Orders -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
                                <i class="nav-icon fas fa-shopping-cart"></i>
                                <p>Đơn hàng</p>
                            </a>
                        </li>

                        <!-- Reports -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>Báo cáo</p>
                            </a>
                        </li>

                        <!-- Carts (Admin View) -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Carts" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Carts" ? "active" : "")">
                                <i class="nav-icon fas fa-shopping-basket"></i>
                                <p>Giỏ hàng</p>
                            </a>
                        </li>

                        <li class="nav-header">HỆ THỐNG</li>

                        <!-- Settings / Configuration -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
                                <i class="nav-icon fas fa-cog"></i>
                                <p>Cấu hình</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.UtcNow.Year <a href="#">Moderno Commerce</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
        
        <!-- Hidden logout form for JavaScript submission -->
        <form id="logoutForm" asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" style="display:none;">
            @Html.AntiForgeryToken()
        </form>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <!-- Custom Admin JS -->
    <script src="~/js/admin/admin.js" asp-append-version="true"></script>
    
    <script>
        // Toastr configuration
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Show toast notifications from TempData
        @if (TempData["Success"] != null)
        {
            <text>
            toastr.success('@TempData["Success"]');
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
            toastr.error('@TempData["Error"]');
            </text>
        }
        @if (TempData["Warning"] != null)
        {
            <text>
            toastr.warning('@TempData["Warning"]');
            </text>
        }
        @if (TempData["Info"] != null)
        {
            <text>
            toastr.info('@TempData["Info"]');
            </text>
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
