@model Ecommerce.Web.Areas.Admin.ViewModels.ReportDashboardViewModel

@{
    ViewData["Title"] = "Báo cáo nâng cao";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Báo cáo nâng cao</h1>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Tổng doanh thu (30 ngày)</h6>
                    <h2 class="display-5 fw-bold text-success mb-0">@Model.TotalRevenue.ToString("N0") ₫</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Tổng đơn hàng</h6>
                    <h2 class="display-5 fw-bold text-info mb-0">@Model.TotalOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Giá trị đơn TB</h6>
                    <h2 class="display-5 fw-bold text-warning mb-0">@Model.AverageOrderValue.ToString("N0") ₫</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-transparent border-secondary">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Doanh thu theo ngày (30 ngày qua)</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Best-Selling Products -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-transparent border-secondary">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-trophy-fill me-2"></i>Top 10 sản phẩm bán chạy</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tên sản phẩm</th>
                                    <th class="text-end">Số lượng bán</th>
                                    <th class="text-end">Doanh thu</th>
                                    <th style="width: 30%;">Biểu đồ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var maxQuantity = Model.BestSellingProducts.Any() ? Model.BestSellingProducts.Max(x => x.QuantitySold) : 1;
                                }
                                @for (int i = 0; i < Model.BestSellingProducts.Count; i++)
                                {
                                    var item = Model.BestSellingProducts[i];
                                    <tr>
                                        <td class="fw-bold">@(i + 1)</td>
                                        <td>@item.ProductName</td>
                                        <td class="text-end fw-bold">@item.QuantitySold</td>
                                        <td class="text-end text-success">@item.TotalRevenue.ToString("N0") ₫</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @(item.QuantitySold * 100 / maxQuantity)%;"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.BestSellingProducts.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted fst-italic py-4">Chưa có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const ctx = document.getElementById('revenueChart');
        
        const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DailyRevenue.Select(x => x.Date.ToString("dd/MM"))));
        const data = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DailyRevenue.Select(x => x.Revenue)));

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu (₫)',
                    data: data,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        labels: {
                            color: '#fff'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('vi-VN').format(context.parsed.y) + ' ₫';
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: '#aaa',
                            callback: function(value) {
                                return new Intl.NumberFormat('vi-VN', { notation: 'compact' }).format(value);
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#aaa'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    }
                }
            }
        });
    </script>
}
