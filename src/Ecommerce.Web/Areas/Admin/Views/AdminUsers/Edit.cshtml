@model Ecommerce.Web.Areas.Admin.ViewModels.AdminUserFormViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Admin User";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-user-tie text-danger"></i> Chỉnh sửa Admin User
                </h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin tài khoản</h3>
                    </div>
                    
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" readonly>
                                <small class="form-text text-muted">Username không thể thay đổi</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="required"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FullName"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Họ và tên đầy đủ">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="GroupId"></label>
                                <select asp-for="GroupId" asp-items="Model.Groups" class="form-control">
                                </select>
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                                <small class="form-text text-muted">Chọn nhóm để gán quyền hạn cho tài khoản</small>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch">
                                    <label class="custom-control-label" for="isActiveSwitch">
                                        <strong>Kích hoạt tài khoản</strong>
                                        <small class="d-block text-muted">Chỉ tài khoản đang hoạt động mới có thể đăng nhập</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                            <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-warning float-right">
                                <i class="fas fa-key"></i> Reset mật khẩu
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin</h3>
                    </div>
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle"></i> Chỉnh sửa tài khoản</h6>
                        <p class="text-sm">Bạn có thể cập nhật thông tin cơ bản và phân quyền cho tài khoản Admin.</p>
                        
                        <h6><i class="fas fa-key text-warning"></i> Thay đổi mật khẩu</h6>
                        <p class="text-sm">Để thay đổi mật khẩu, vui lòng sử dụng chức năng "Reset mật khẩu" ở góc dưới bên phải.</p>

                        <h6><i class="fas fa-exclamation-triangle text-warning"></i> Lưu ý</h6>
                        <ul class="text-sm pl-3">
                            <li>Username không thể thay đổi</li>
                            <li>Email phải là duy nhất</li>
                            <li>Vô hiệu hóa tài khoản sẽ ngăn đăng nhập</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
