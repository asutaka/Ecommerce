@model Ecommerce.Web.Areas.Admin.ViewModels.AdminUserFormViewModel

@{
    ViewData["Title"] = "Thêm Admin User";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-user-tie text-danger"></i> Thêm Admin User
                </h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin tài khoản</h3>
                    </div>
                    
                    <form asp-action="Create" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Username" class="required"></label>
                                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="required"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FullName"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Họ và tên đầy đủ">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="GroupId"></label>
                                <select asp-for="GroupId" asp-items="Model.Groups" class="form-control">
                                </select>
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                                <small class="form-text text-muted">Chọn nhóm để gán quyền hạn cho tài khoản</small>
                            </div>

                            <hr>

                            <div class="form-group">
                                <label asp-for="Password" class="required"></label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="required"></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch" checked>
                                    <label class="custom-control-label" for="isActiveSwitch">
                                        <strong>Kích hoạt tài khoản</strong>
                                        <small class="d-block text-muted">Chỉ tài khoản đang hoạt động mới có thể đăng nhập</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo tài khoản
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Hướng dẫn</h3>
                    </div>
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle"></i> Về tài khoản Admin</h6>
                        <p class="text-sm">Tài khoản Admin được sử dụng để quản lý hệ thống và có quyền truy cập vào khu vực quản trị.</p>
                        
                        <h6><i class="fas fa-lightbulb"></i> Lưu ý</h6>
                        <ul class="text-sm pl-3">
                            <li>Username phải là duy nhất</li>
                            <li>Email phải là duy nhất</li>
                            <li>Mật khẩu sẽ được mã hóa an toàn</li>
                            <li>Gán nhóm để tự động kế thừa quyền</li>
                        </ul>

                        <h6><i class="fas fa-shield-alt text-success"></i> Bảo mật</h6>
                        <p class="text-sm">Mật khẩu được mã hóa bằng BCrypt và không thể xem lại. Sử dụng chức năng Reset Password nếu cần thay đổi.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
