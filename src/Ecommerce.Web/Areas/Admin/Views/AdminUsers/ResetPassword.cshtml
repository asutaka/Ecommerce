@model Ecommerce.Web.Areas.Admin.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset mật khẩu";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-key text-warning"></i> Reset mật khẩu
                </h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Đặt lại mật khẩu cho tài khoản</h3>
                    </div>
                    
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="AdminUserId" />
                        
                        <div class="card-body">
                            <div class="alert alert-info">
                                <h6><i class="icon fas fa-info"></i> Thông tin tài khoản</h6>
                                <p class="mb-1"><strong>Username:</strong> @Model.Username</p>
                                <p class="mb-0"><strong>Email:</strong> @Model.Email</p>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword" class="required"></label>
                                <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nhập mật khẩu mới">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="required"></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="alert alert-warning">
                                <h6><i class="icon fas fa-exclamation-triangle"></i> Lưu ý quan trọng</h6>
                                <ul class="mb-0 pl-3">
                                    <li>Mật khẩu cũ sẽ không còn sử dụng được</li>
                                    <li>Người dùng cần sử dụng mật khẩu mới để đăng nhập</li>
                                    <li>Mật khẩu được mã hóa an toàn và không thể xem lại</li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-key"></i> Reset mật khẩu
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
