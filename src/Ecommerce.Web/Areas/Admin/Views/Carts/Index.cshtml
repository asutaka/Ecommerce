@model Ecommerce.Web.Areas.Admin.ViewModels.CartListViewModel

@{
    ViewData["Title"] = "Quản lý giỏ hàng active";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Giỏ hàng đang hoạt động</h1>
            <p class="text-muted">Các giỏ hàng có cập nhật trong 24h qua</p>
        </div>
        <a asp-action="Analytics" class="btn btn-outline-info rounded-pill">
            <i class="bi bi-graph-up me-2"></i>Xem thống kê bỏ giỏ
        </a>
    </div>

    <div class="card bg-transparent border-secondary">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Session ID</th>
                            <th>Số lượng SP</th>
                            <th>Tổng giá trị (tạm tính)</th>
                            <th>Cập nhật cuối</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Carts)
                        {
                            <tr>
                                <td><code class="text-info">@item.SessionId</code></td>
                                <td>@item.Items.Sum(x => x.Quantity)</td>
                                <td>@item.Items.Sum(x => x.UnitPrice * x.Quantity).ToString("N0") ₫</td>
                                <td>@item.UpdatedAt?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">
                                        <i class="bi bi-eye me-1"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (Model.Carts.TotalPages > 1)
        {
            <div class="card-footer border-top border-secondary bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Trang @Model.Carts.PageIndex / @Model.Carts.TotalPages
                    </div>
                    <div>
                        @{
                            var prevDisabled = !Model.Carts.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.Carts.HasNextPage ? "disabled" : "";
                        }
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.Carts.PageIndex - 1)"
                           class="btn btn-sm btn-outline-light @prevDisabled">
                            <i class="bi bi-chevron-left"></i> Trước
                        </a>
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.Carts.PageIndex + 1)"
                           class="btn btn-sm btn-outline-light @nextDisabled ms-1">
                            Sau <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
