@model Ecommerce.Web.Areas.Admin.ViewModels.CartDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết giỏ hàng";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-shopping-cart text-primary"></i> Chi tiết giỏ hàng
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Session Info -->
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-info-circle"></i> Session ID</h5>
                    <p class="mb-0"><code>@Model.SessionId</code></p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Cart Items -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-box"></i> Sản phẩm trong giỏ</h3>
                        <div class="card-tools">
                            <span class="badge badge-primary">
                                @Model.Items.Sum(x => x.Quantity) sản phẩm
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">Ảnh</th>
                                    <th>Sản phẩm</th>
                                    <th class="text-right">Đơn giá</th>
                                    <th class="text-center" style="width: 100px;">Số lượng</th>
                                    <th class="text-right">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ProductImageUrl" 
                                                 alt="@item.ProductName" 
                                                 class="img-thumbnail" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        </td>
                                        <td>
                                            <strong>@item.ProductName</strong>
                                        </td>
                                        <td class="text-right">@item.UnitPrice.ToString("N0") ₫</td>
                                        <td class="text-center">
                                            <span class="badge badge-info">@item.Quantity</span>
                                        </td>
                                        <td class="text-right">
                                            <strong>@item.LineTotal.ToString("N0") ₫</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="bg-light">
                                    <td colspan="4" class="text-right"><strong>Tổng cộng:</strong></td>
                                    <td class="text-right">
                                        <h5 class="text-success mb-0">@Model.TotalValue.ToString("N0") ₫</h5>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Cart Info -->
            <div class="col-md-4">
                <!-- Cart Summary -->
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-info-circle"></i> Thông tin giỏ hàng</h3>
                    </div>
                    <div class="card-body">
                        <strong><i class="fas fa-calendar mr-1"></i> Cập nhật lần cuối</strong>
                        <p class="text-muted">
                            @if (Model.LastUpdated.HasValue)
                            {
                                @Model.LastUpdated.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                <span>Chưa cập nhật</span>
                            }
                        </p>
                        <hr>
                        <strong><i class="fas fa-user mr-1"></i> Customer ID</strong>
                        <p class="text-muted">
                            @if (Model.CustomerId.HasValue)
                            {
                                <code>@Model.CustomerId</code>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Khách vãng lai</span>
                            }
                        </p>
                        <hr>
                        <strong><i class="fas fa-box mr-1"></i> Tổng số sản phẩm</strong>
                        <p class="text-muted">
                            <span class="badge badge-info">@Model.Items.Sum(x => x.Quantity)</span>
                        </p>
                        <hr>
                        <strong><i class="fas fa-dollar-sign mr-1"></i> Tổng giá trị</strong>
                        <p class="text-success">
                            <strong>@Model.TotalValue.ToString("N0") ₫</strong>
                        </p>
                    </div>
                </div>

                <!-- Cart Status -->
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-chart-line"></i> Trạng thái</h3>
                    </div>
                    <div class="card-body">
                        @{
                            var isRecent = Model.LastUpdated.HasValue && Model.LastUpdated.Value > DateTime.UtcNow.AddHours(-1);
                            var isAbandoned = Model.LastUpdated.HasValue && Model.LastUpdated.Value < DateTime.UtcNow.AddHours(-24);
                        }
                        
                        @if (isRecent)
                        {
                            <div class="alert alert-success">
                                <h5><i class="icon fas fa-check"></i> Đang hoạt động</h5>
                                Giỏ hàng này được cập nhật trong vòng 1 giờ qua.
                            </div>
                        }
                        else if (isAbandoned)
                        {
                            <div class="alert alert-warning">
                                <h5><i class="icon fas fa-exclamation-triangle"></i> Đã bỏ giỏ</h5>
                                Giỏ hàng này không được cập nhật trong hơn 24 giờ.
                                <hr>
                                <p class="mb-0"><strong>Khuyến nghị:</strong> Gửi email nhắc nhở khách hàng</p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <h5><i class="icon fas fa-info-circle"></i> Không hoạt động</h5>
                                Giỏ hàng này đã không được cập nhật trong một thời gian.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
