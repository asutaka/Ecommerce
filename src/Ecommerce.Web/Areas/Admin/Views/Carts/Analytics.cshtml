@model Ecommerce.Web.Areas.Admin.ViewModels.CartAnalyticsViewModel

@{
    ViewData["Title"] = "Phân tích giỏ hàng";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Phân tích giỏ hàng & Bỏ giỏ</h1>
        <a asp-action="Index" class="btn btn-outline-light rounded-pill">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách active
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Tổng số giỏ hàng</h6>
                    <h2 class="display-4 fw-bold mb-0">@Model.TotalCarts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Đang active (< 24h)</h6>
                    <h2 class="display-4 fw-bold text-success mb-0">@Model.ActiveCarts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Đã bỏ giỏ (> 24h)</h6>
                    <h2 class="display-4 fw-bold text-warning mb-0">@Model.AbandonedCarts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-secondary text-white h-100">
                <div class="card-body text-center">
                    <h6 class="text-muted text-uppercase mb-2">Tỷ lệ bỏ giỏ</h6>
                    <h2 class="display-4 fw-bold text-danger mb-0">@Model.AbandonmentRate%</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card bg-transparent border-secondary">
                <div class="card-header border-secondary bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-bar-chart-fill me-2"></i>Top 10 sản phẩm bị bỏ quên nhiều nhất</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th class="text-end">Số lượng bị bỏ quên</th>
                                    <th style="width: 40%;">Tỷ trọng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var maxCount = Model.TopAbandonedItems.Any() ? Model.TopAbandonedItems.Max(x => x.AbandonedCount) : 1;
                                }
                                @foreach (var item in Model.TopAbandonedItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-end fw-bold">@item.AbandonedCount</td>
                                        <td>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: @(item.AbandonedCount * 100 / maxCount)%;"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.TopAbandonedItems.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted fst-italic py-4">Chưa có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
