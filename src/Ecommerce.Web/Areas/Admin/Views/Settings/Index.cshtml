@{
    ViewData["Title"] = "Cấu hình hệ thống";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-cog text-secondary"></i> Cấu hình chung
                </h1>
                <p class="text-muted">Quản lý cấu hình và thông tin hệ thống</p>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Thông tin kho hàng -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3><i class="fas fa-warehouse"></i></h3>
                        <p class="mb-0"><strong>Thông tin kho hàng</strong></p>
                        <p class="text-sm">Quản lý danh sách kho hàng và thông tin liên hệ</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                    <a asp-controller="Warehouses" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Nhà cung cấp -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3><i class="fas fa-truck"></i></h3>
                        <p class="mb-0"><strong>Nhà cung cấp</strong></p>
                        <p class="text-sm">Quản lý danh sách nhà cung cấp và thông tin liên hệ</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <a asp-controller="Suppliers" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Mã khuyến mãi -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3><i class="fas fa-tag"></i></h3>
                        <p class="mb-0"><strong>Mã khuyến mãi</strong></p>
                        <p class="text-sm">Quản lý các mã giảm giá và chương trình khuyến mãi</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-tag"></i>
                    </div>
                    <a asp-controller="Coupons" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Account Configuration Section -->
        <div class="row mt-4">
            <div class="col-12">
                <h4 class="text-muted mb-3">
                    <i class="fas fa-users-cog"></i> Cấu hình tài khoản
                </h4>
            </div>
        </div>

        <div class="row">
            <!-- Role Tài khoản -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3><i class="fas fa-user-shield"></i></h3>
                        <p class="mb-0"><strong>Nhóm Tài khoản</strong></p>
                        <p class="text-sm">Quản lý vai trò và phân quyền người dùng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <a asp-controller="Groups" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Tài khoản Admin -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3><i class="fas fa-user-tie"></i></h3>
                        <p class="mb-0"><strong>Tài khoản Admin</strong></p>
                        <p class="text-sm">Quản lý tài khoản quản trị viên hệ thống</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <a asp-controller="AdminUsers" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <!-- Tài khoản khách hàng -->
            <div class="col-lg-4 col-md-6">
                <div class="small-box bg-secondary">
                    <div class="inner">
                        <h3><i class="fas fa-users"></i></h3>
                        <p class="mb-0"><strong>Tài khoản khách hàng</strong></p>
                        <p class="text-sm">Quản lý tài khoản người dùng và khách hàng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a asp-controller="Customers" asp-action="Index" class="small-box-footer">
                        Quản lý <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
