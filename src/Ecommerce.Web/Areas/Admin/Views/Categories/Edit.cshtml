@model Ecommerce.Web.Areas.Admin.ViewModels.CategoryFormViewModel

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">
                    <i class="fas fa-layer-group text-primary"></i> Chỉnh sửa danh mục
                </h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin danh mục</h3>
                    </div>
                    
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name" class="required"></label>
                                <input asp-for="Name" class="form-control" placeholder="Ví dụ: Áo thun, Quần jean...">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả về danh mục này"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ParentId"></label>
                                <select asp-for="ParentId" asp-items="Model.Categories" class="form-control">
                                    <option value="">-- Không có (Danh mục gốc) --</option>
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                                <small class="form-text text-muted">Chọn danh mục cha nếu đây là danh mục con</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Priority"></label>
                                <input asp-for="Priority" type="number" class="form-control" placeholder="0">
                                <span asp-validation-for="Priority" class="text-danger"></span>
                                <small class="form-text text-muted">Số cao hơn sẽ hiển thị trước (0 = thấp nhất)</small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin</h3>
                    </div>
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle"></i> Cấu trúc danh mục</h6>
                        <p class="text-sm">Danh mục này có thể chứa các danh mục con và sản phẩm.</p>
                        
                        <h6><i class="fas fa-exclamation-triangle text-warning"></i> Lưu ý</h6>
                        <ul class="text-sm pl-3">
                            <li>Không thể chọn chính nó làm danh mục cha</li>
                            <li>Tránh tạo vòng lặp trong cấu trúc danh mục</li>
                            <li>Danh mục có sản phẩm không thể xóa</li>
                        </ul>

                        <h6><i class="fas fa-chart-bar"></i> Thống kê</h6>
                        <p class="text-sm text-muted">Chức năng hiển thị số lượng sản phẩm sẽ được bổ sung sau.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
