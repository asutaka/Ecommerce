@model Ecommerce.Web.Models.PaginatedList<Ecommerce.Infrastructure.Entities.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-box text-primary"></i> Quản lý sản phẩm
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary mr-2">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Export" asp-route-searchTerm="@ViewBag.SearchTerm" class="btn btn-info mr-2">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </a>
                    <a asp-action="Import" class="btn btn-success mr-2">
                        <i class="fas fa-file-upload"></i> Import Excel
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách sản phẩm</h3>
                <div class="card-tools">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group input-group-sm" style="width: 300px;">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.SearchTerm">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                {
                                    <a asp-action="Index" class="btn btn-default">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                            <th>Hoạt động</th>
                            <th>Ngày tạo</th>
                            <th class="text-right">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.HeroImageUrl" alt="@item.Name" 
                                             class="img-thumbnail product-thumbnail" 
                                             style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
                                             data-image="@item.HeroImageUrl"
                                             data-images='@System.Text.Json.JsonSerializer.Serialize(item.Images)'
                                             data-product="@item.Name"
                                             title="Click để xem tất cả ảnh">
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br><small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                        }
                                    </td>
                                    <td>
                                        @if (item.PrimaryCategory != null)
                                        {
                                            <span class="badge badge-info">
                                                <i class="fas fa-folder"></i> @item.PrimaryCategory.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.OriginalPrice.HasValue && item.OriginalPrice > item.Price)
                                        {
                                            <div>
                                                <small class="text-muted" style="text-decoration: line-through;">
                                                    @item.OriginalPrice.Value.ToString("N0") ₫
                                                </small>
                                            </div>
                                            <strong class="text-danger">@item.Price.ToString("N0") ₫</strong>
                                            <span class="badge badge-danger ml-1">@Math.Round(100 * (-1 + (double)item.Price / (double)item.OriginalPrice.Value))%</span>
                                        }
                                        else
                                        {
                                            <strong>@item.Price.ToString("N0") ₫</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-star"></i> Nổi bật
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Thường</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">
                                                <i class="fas fa-times"></i> Không hoạt động
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-success" : "btn-secondary")" 
                                                        title="@(item.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                                    <i class="fas fa-power-off"></i>
                                                </button>
                                            </form>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-primary btn-share" data-id="@item.Id" title="Đăng lên Mạng xã hội">
                                                <i class="fas fa-share-alt"></i>
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" 
                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm @item.Name?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    <p class="mb-0">Không có sản phẩm nào</p>
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                    {
                                        <small>Không tìm thấy kết quả cho "<strong>@ViewBag.SearchTerm</strong>"</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer clearfix">
                    <div class="float-left">
                        <small class="text-muted">
                            Trang @Model.PageIndex / @Model.TotalPages
                            (Tổng: <strong>@Model.TotalCount</strong> sản phẩm)
                        </small>
                    </div>
                    <ul class="pagination pagination-sm m-0 float-right">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="fas fa-chevron-left"></i></span>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@i"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">@i</a>
                            </li>
                        }
                        
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="fas fa-chevron-right"></i></span>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>

<!-- Image Preview Modal with Carousel -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" role="dialog" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imagePreviewModalLabel">Xem ảnh</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center p-0">
                <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" id="carouselImages">
                        <!-- Images will be inserted here by JavaScript -->
                    </div>
                    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Social Share Modal -->
<div class="modal fade" id="socialShareModal" tabindex="-1" role="dialog" aria-labelledby="socialShareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="socialShareModalLabel">
                    <i class="fas fa-share-alt mr-2"></i> Đăng sản phẩm đa kênh
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5 border-right">
                        <h6 class="font-weight-bold">1. Chọn nền tảng</h6>
                        <div id="socialPlatformsList" class="mt-3">
                            <!-- Platforms loaded via AJAX -->
                            <div class="text-center py-5"><i class="fas fa-spinner fa-spin"></i> Đang tải...</div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <h6 class="font-weight-bold">2. Nội dung bài đăng</h6>
                        <div class="form-group mt-3">
                            <label>Nội dung</label>
                            <textarea id="socialMessage" class="form-control" rows="8" placeholder="Nhập nội dung bài đăng..."></textarea>
                            <small class="text-muted">Hỗ trợ các thẻ: #Hashtag, Link...</small>
                        </div>
                        <div id="postResults" class="mt-3" style="display:none;">
                            <h6>Kết quả:</h6>
                            <div class="results-list"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnConfirmShare">
                    <i class="fas fa-paper-plane mr-1"></i> Đăng ngay
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle product thumbnail click
            $('.product-thumbnail').on('click', function() {
                var productName = $(this).data('product');
                var imagesJson = $(this).data('images');
                
                // Parse images array
                var images = [];
                try {
                    images = typeof imagesJson === 'string' ? JSON.parse(imagesJson) : imagesJson;
                } catch (e) {
                    console.error('Error parsing images:', e);
                    // Fallback to single image
                    images = [$(this).data('image')];
                }
                
                // Clear carousel
                $('#carouselImages').empty();
                
                // Add images to carousel
                if (images && images.length > 0) {
                    images.forEach(function(imageUrl, index) {
                        var activeClass = index === 0 ? 'active' : '';
                        var carouselItem = `
                            <div class="carousel-item ${activeClass}">
                                <img src="${imageUrl}" class="d-block w-100" alt="${productName}" style="max-height: 500px; object-fit: contain;">
                            </div>
                        `;
                        $('#carouselImages').append(carouselItem);
                    });
                } else {
                    // Fallback if no images
                    $('#carouselImages').html(`
                        <div class="carousel-item active">
                            <div class="p-5 text-muted">
                                <i class="fas fa-image fa-3x"></i>
                                <p class="mt-3">Không có ảnh</p>
                            </div>
                        </div>
                    `);
                }
                
                $('#imagePreviewModalLabel').text(productName + ' (' + images.length + ' ảnh)');
                $('#imagePreviewModal').modal('show');
            });

            // --- Social Share Logic ---
            var currentProductId = null;

            $('.btn-share').on('click', function(e) {
                e.preventDefault();
                var btn = $(this);
                currentProductId = btn.data('id');
                
                // Reset UI
                $('#socialPlatformsList').html('<div class="text-center py-5"><i class="fas fa-spinner fa-spin"></i> Đang tải...</div>');
                $('#socialMessage').val('');
                $('#postResults').hide();
                $('#btnConfirmShare').prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Đăng ngay');

                $('#socialShareModal').modal('show');

                // Load product info & platforms
                $.get('/Admin/Social/GetShareInfo/' + currentProductId, function(data) {
                    $('#socialMessage').val(data.defaultMessage);
                    
                    var platformsHtml = '';
                    if (data.platforms && data.platforms.length > 0) {
                        data.platforms.forEach(function(p) {
                            platformsHtml += `
                                <div class="custom-control custom-checkbox mb-3 p-3 border rounded ${p.isConfigured ? '' : 'bg-light text-muted'}">
                                    <input type="checkbox" class="custom-control-input social-platform-check" 
                                           id="platform_${p.id}" value="${p.id}" ${p.isConfigured ? '' : 'disabled'}>
                                    <label class="custom-control-label d-flex align-items-center w-100" for="platform_${p.id}">
                                        <i class="${p.iconClass} fa-2x mr-3" style="color: ${p.colorClass}; width: 40px; text-align: center;"></i>
                                        <span>
                                            <strong class="d-block">${p.name}</strong>
                                            <small>${p.isConfigured ? 'Sẵn sàng' : 'Chưa cấu hình'}</small>
                                        </span>
                                    </label>
                                </div>
                            `;
                        });
                    } else {
                        platformsHtml = '<div class="alert alert-warning">Chưa có nền tảng nào được cấu hình.</div>';
                    }
                    $('#socialPlatformsList').html(platformsHtml);
                }).fail(function(err) {
                    console.error('Error loading share info:', err);
                    var errMsg = err.responseText || "Không thể tải thông tin. Vui lòng thử lại.";
                    $('#socialPlatformsList').html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Lỗi: ' + errMsg + '</div>');
                });
            });

            $('#btnConfirmShare').on('click', function() {
                var selectedPlatforms = [];
                $('.social-platform-check:checked').each(function() {
                    selectedPlatforms.push($(this).val());
                });

                if (selectedPlatforms.length === 0) {
                    alert('Vui lòng chọn ít nhất một nền tảng!');
                    return;
                }

                var message = $('#socialMessage').val();
                
                // Show loading state
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang đăng...');
                $('#postResults').hide();

                $.ajax({
                    url: '/Admin/Social/Publish',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        productId: currentProductId,
                        platformIds: selectedPlatforms,
                        message: message
                    }),
                    success: function(response) {
                        var resultsHtml = '<ul class="list-group list-group-flush">';
                        response.results.forEach(function(r) {
                             var icon = r.success ? '<i class="fas fa-check-circle text-success"></i>' : '<i class="fas fa-times-circle text-danger"></i>';
                             var link = r.postUrl ? `<a href="${r.postUrl}" target="_blank" class="ml-2 btn btn-xs btn-outline-primary"><i class="fas fa-external-link-alt"></i> Xem</a>` : '';
                             
                             resultsHtml += `
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span>${icon} <strong>${r.platformId}</strong>: ${r.message}</span>
                                    ${link}
                                </li>
                             `;
                        });
                        resultsHtml += '</ul>';
                        
                        $('#postResults .results-list').html(resultsHtml);
                        $('#postResults').slideDown();
                        
                        btn.prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Đăng lại');
                        // Don't close modal automatically so user can see results
                    },
                    error: function(err) {
                        alert('Có lỗi xảy ra: ' + (err.responseText || err.statusText));
                        btn.prop('disabled', false).html('<i class="fas fa-paper-plane mr-1"></i> Đăng ngay');
                    }
                });
            });
        });
    </script>
}
