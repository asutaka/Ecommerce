@model Ecommerce.Web.Models.PaginatedList<Ecommerce.Infrastructure.Entities.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-box text-primary"></i> Quản lý sản phẩm
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary mr-2">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Export" asp-route-searchTerm="@ViewBag.SearchTerm" class="btn btn-info mr-2">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </a>
                    <a asp-action="Import" class="btn btn-success mr-2">
                        <i class="fas fa-file-upload"></i> Import Excel
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách sản phẩm</h3>
                <div class="card-tools">
                    <form asp-action="Index" method="get" class="form-inline">
                        <div class="input-group input-group-sm" style="width: 300px;">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.SearchTerm">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                {
                                    <a asp-action="Index" class="btn btn-default">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                            <th>Hoạt động</th>
                            <th>Ngày tạo</th>
                            <th class="text-right">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.HeroImageUrl" alt="@item.Name" 
                                             class="img-thumbnail product-thumbnail" 
                                             style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
                                             data-image="@item.HeroImageUrl"
                                             data-images='@System.Text.Json.JsonSerializer.Serialize(item.Images)'
                                             data-product="@item.Name"
                                             title="Click để xem tất cả ảnh">
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br><small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                        }
                                    </td>
                                    <td>
                                        @if (item.PrimaryCategory != null)
                                        {
                                            <span class="badge badge-info">
                                                <i class="fas fa-folder"></i> @item.PrimaryCategory.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.Price.ToString("N0") ₫</strong>
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-star"></i> Nổi bật
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Thường</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">
                                                <i class="fas fa-times"></i> Không hoạt động
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-success" : "btn-secondary")" 
                                                        title="@(item.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                                    <i class="fas fa-power-off"></i>
                                                </button>
                                            </form>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" 
                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm @item.Name?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    <p class="mb-0">Không có sản phẩm nào</p>
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                                    {
                                        <small>Không tìm thấy kết quả cho "<strong>@ViewBag.SearchTerm</strong>"</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer clearfix">
                    <div class="float-left">
                        <small class="text-muted">
                            Trang @Model.PageIndex / @Model.TotalPages
                            (Tổng: <strong>@Model.TotalCount</strong> sản phẩm)
                        </small>
                    </div>
                    <ul class="pagination pagination-sm m-0 float-right">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="fas fa-chevron-left"></i></span>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@i"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">@i</a>
                            </li>
                        }
                        
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a asp-action="Index" 
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-searchTerm="@ViewBag.SearchTerm"
                                   class="page-link">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link"><i class="fas fa-chevron-right"></i></span>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>

<!-- Image Preview Modal with Carousel -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" role="dialog" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imagePreviewModalLabel">Xem ảnh</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center p-0">
                <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" id="carouselImages">
                        <!-- Images will be inserted here by JavaScript -->
                    </div>
                    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle product thumbnail click
            $('.product-thumbnail').on('click', function() {
                var productName = $(this).data('product');
                var imagesJson = $(this).data('images');
                
                // Parse images array
                var images = [];
                try {
                    images = typeof imagesJson === 'string' ? JSON.parse(imagesJson) : imagesJson;
                } catch (e) {
                    console.error('Error parsing images:', e);
                    // Fallback to single image
                    images = [$(this).data('image')];
                }
                
                // Clear carousel
                $('#carouselImages').empty();
                
                // Add images to carousel
                if (images && images.length > 0) {
                    images.forEach(function(imageUrl, index) {
                        var activeClass = index === 0 ? 'active' : '';
                        var carouselItem = `
                            <div class="carousel-item ${activeClass}">
                                <img src="${imageUrl}" class="d-block w-100" alt="${productName}" style="max-height: 500px; object-fit: contain;">
                            </div>
                        `;
                        $('#carouselImages').append(carouselItem);
                    });
                } else {
                    // Fallback if no images
                    $('#carouselImages').html(`
                        <div class="carousel-item active">
                            <div class="p-5 text-muted">
                                <i class="fas fa-image fa-3x"></i>
                                <p class="mt-3">Không có ảnh</p>
                            </div>
                        </div>
                    `);
                }
                
                $('#imagePreviewModalLabel').text(productName + ' (' + images.length + ' ảnh)');
                $('#imagePreviewModal').modal('show');
            });
        });
    </script>
}
